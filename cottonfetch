        LINE6='⣿⣿⣿⡇⢸⣿⣿⣿⡇⢸⣿⣿⣿ '
        LINE7='⣿⣿⣿⡇⢸⣿⣿⣿⡇⢸⣿⣿⣿ '
        LINE8='⣿⣿⣿⡇⢸⣿⣿⣿⡇⢸⣿⣿⣿ '
        LINE9='              '
     elif [[ "$DISTRO" == 'Alpine Linux' ]]; then
        DISTROCOLOUR=$BLUE
        ACCENTCOLOUR=$LIBL
        LINE1='           '        
        LINE2='⠀⠀⣴⣶⣶⣶⣶⣦⠀⠀ '
        LINE3='⢀⣼⣿⡿⠻⡿⢿⣿⣧⡀ '
        LINE4='⢾⡿⢋⢴⣦⡀⠢⡙⢿⡷ '
        LINE5='⠈⢻⣿⣿⣿⣿⣿⣿⡟⠁ '
        LINE6='⠀⠀⠻⠿⠿⠿⠿⠟⠀⠀ '
        LINE7='           '
        LINE8='           '
        LINE9='           '
     elif [[ "$DISTRO" == 'TinyCore' ]]; then
        DISTROCOLOUR=$BLCK
        ACCENTCOLOUR=$LIGR
        LINE1='                    '        
        LINE2='⠀⠀⠀⣠⣴⢶⣤⣾⠿⣷⣄⣤⣤⣤⣤⡶⣦⡀⠀⠀'
        LINE3='⠀⠀⠀⣿⣇⣀⣿⣧⡞⣹⣿⣿⡇⠘⣿⣛⣛⡃⠀⠀'
        LINE4='⠀⠀⠀⠈⠉⠉⠉⠛⠛⠛⠁⠉⠁⠀⠈⠉⠉⠁⠀⠀'
        LINE5='                    '
        LINE6='                    '
        LINE7='                    '
        LINE8='                    '
        LINE9='                    '

    else
        echo "Distro logo not found! Contact @plasmacotton on Discord, or email rivulet.rw@proton.me to help fix this problem!"
        DISTROCOLOUR=$LIGR
        ACCENTCOLOUR=$RED
        LINE1='ERROR⣶⣿⣿⣦⠀⠀⠀⠀'
        LINE2='⠀⠀⠀⠀⠀⡱⠻⠦⣿⡀⠀⠀⠀'
        LINE3='⠀⠀⠀⠀⢀⠧⠱⠈⢻⣧⠀⠀⠀'
        LINE4='⠀⠀⠀⢠⠏⠀⠀⠀⠂⢿⣷⡀⠀'
        LINE5='⠀⠀⢀⡟⠀⠠⠀⠀⠀⢸⣿⣧⠀'
        LINE6='⠀⠠⢀⠂⢤⡈⠀⠀⢀⠸⠿⡋⠀'
        LINE7='⠀⠌⡠⠨⠨⣁⣀⣠⣴⠨⢐⢀⠂'
        LINE8='⠀⠐⠈⠌⠒⠉⠀⠂⠉⠊⠊⠀⠀'
        LINE9='             '
    fi

    # THIS IS THE PART IT PRINTS OUT!!! THIS IS WHAT YOU WANT TO EDIT IF YOU WANT TO CUSTOMIZE IT!!

    echo
    echo -e ${DISTROCOLOUR}$LINE9${NC} ${DISTROCOLOUR}$USERNAME${NC}"@"${ACCENTCOLOUR}$HOST
    echo -e ${DISTROCOLOUR}$LINE1${NC} "┌ "${ACCENTCOLOUR}"os"
    echo -e ${DISTROCOLOUR}$LINE2${NC} "│type ►" ${DISTROCOLOUR} $OS ${ACCENTCOLOUR}"("$DISTRO", version "$DISTROVER")"
    echo -e ${DISTROCOLOUR}$LINE3${NC} "│krnl ►" ${DISTROCOLOUR} $KERNEL", version" ${ACCENTCOLOUR}$KERNELVER
    echo -e ${DISTROCOLOUR}$LINE4${NC} "│arch ►" ${DISTROCOLOUR} $ARCH
    echo -e ${DISTROCOLOUR}$LINE5${NC} "┌ "${ACCENTCOLOUR}"pc"${LIGR}
    echo -e ${DISTROCOLOUR}$LINE6${NC} "│ram ►" ${DISTROCOLOUR} $RAMUSED"/"$RAM"MB" ${ACCENTCOLOUR}"("$SWAPUSED"/"$SWAP"MB Swap)"
    echo -e ${DISTROCOLOUR}$LINE7${NC} "│cpu ►" ${DISTROCOLOUR} $CPU 
    echo -e ${DISTROCOLOUR}$LINE8${NC} "│gpu ►" ${DISTROCOLOUR} $GPU 
    echo -e ${DISTROCOLOUR}$LINE9${NC}
    echo -e ${DISTROCOLOUR}$LINE9${NC} "-"${ACCENTCOLOUR} "\e[3m$MSG\e[0m" ${NC}
    echo
fi
