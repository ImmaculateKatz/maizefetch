    elif [[ "$DISTRO" == 'Fedora Linux' ]]; then
        DISTROCOLOUR=$LIBL
        ACCENTCOLOUR=$BLUE
        LINE1='           '
        LINE2='⠀⣠⣴⣾⣿⣿⣷⣦⣄⠀ '
